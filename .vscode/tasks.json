{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run Current File",
      "type": "shell",
      "command": "javac ${file} && java -cp . ${fileBasenameNoExtension}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": "$javac"
    }
  ]
}
