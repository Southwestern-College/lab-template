{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run Current File",
      "type": "shell",
      "command": "rm -f *.class && javac ${file} && java -cp . ${fileBasenameNoExtension}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$javac"
    }
  ]
}
